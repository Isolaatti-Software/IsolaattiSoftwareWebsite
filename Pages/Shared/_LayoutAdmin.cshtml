<!DOCTYPE html>
<html lang="es">
<head>
    <title>@ViewData["Title"] | Administración de Isolaatti Software</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma.min.css">
    <link rel="stylesheet" href="~/css/site.css">
</head>
<body>

<nav class="navbar is-white is-fixed-top has-shadow" role="navigation" aria-label="main navigation">
    <div class="navbar-brand">
        <a class="navbar-item" id="isolaatti_brand" href="/">
        </a>

        <a role="button" class="navbar-burger" aria-label="menu" aria-expanded="false" data-target="navbar">
            <span aria-hidden="true"></span>
            <span aria-hidden="true"></span>
            <span aria-hidden="true"></span>
        </a>
    </div>

    <div id="navbar" class="navbar-menu">
        <div class="navbar-end">
            <div class="navbar-item">
                <div class="buttons">
                    <a class="button" asp-page="/Admin/Settings">
                        <i class="fa-solid fa-gear"></i>
                    </a>
                </div>
            </div>
            <div class="navbar-item">
                <div class="buttons">
                    <a class="button has-background-black has-text-light" asp-controller="UserSigningOperations" asp-action="SignOutUser">
                        <i class="fa-solid fa-right-from-bracket"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
</nav>
<main class="is-marginless" id="app">
    <div class="section">
        @RenderBody()
    </div>
</main>
<script src="~/js/site.js" asp-append-version="true"></script>
<script src="https://kit.fontawesome.com/fde197fc03.js"></script>
<script src="https://cdn.jsdelivr.net/npm/vue@2/dist/vue.js"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>